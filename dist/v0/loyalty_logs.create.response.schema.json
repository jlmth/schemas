{
  "$id": "https://schemas.tillhub.com/v0/loyalty_logs.create.response.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": true,
  "type": "object",
  "required": [
    "id",
    "loyalty_system"
  ],
  "properties": {
    "items": {
      "type": "array",
      "minLength": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "loyalty_system": {
            "description": "The uuid of the loyalty system that this log belongs to.",
            "type": "string",
            "format": "uuid",
            "example": "936835f7-2d75-41d2-9001-38ed6e458328"
          },
          "operation": {
            "type": "string",
            "enum": [
              "increment",
              "increment_failed",
              "decrement",
              "decrement_failed",
              "spend",
              "spend_failed",
              "book",
              "book_failed",
              "deactivate_card",
              "deactivate_card_failed",
              "deactivate_account",
              "deactivate_account_failed",
              "delete_account",
              "delete_account_failed",
              "delete_card",
              "delete_card_failed",
              "lookup_card",
              "lookup_card_failed"
            ]
          },
          "loyalty_account": {
            "oneOf": [
              {
                "description": "The uuid of the loyalty account that this log belongs to.",
                "type": "string",
                "format": "uuid",
                "example": "936835f7-2d75-41d2-9001-38ed6e458328"
              },
              {
                "type": "null"
              }
            ]
          },
          "loyalty_card": {
            "oneOf": [
              {
                "description": "The uuid of the loyalty card that this log belongs to.",
                "type": "string",
                "format": "uuid",
                "example": "936835f7-2d75-41d2-9001-38ed6e458328"
              },
              {
                "type": "null"
              }
            ]
          },
          "product": {
            "oneOf": [
              {
                "description": "The uuid of the product that this log belongs to.",
                "type": "string",
                "format": "uuid",
                "example": "936835f7-2d75-41d2-9001-38ed6e458328"
              },
              {
                "type": "null"
              }
            ]
          },
          "transaction": {
            "oneOf": [
              {
                "description": "The uuid of the transaction that this log belongs to.",
                "type": "string",
                "format": "uuid",
                "example": "936835f7-2d75-41d2-9001-38ed6e458328"
              },
              {
                "type": "null"
              }
            ]
          },
          "cart_item": {
            "oneOf": [
              {
                "description": "The uuid of the cart_item that this log belongs to.",
                "type": "string",
                "format": "uuid",
                "example": "936835f7-2d75-41d2-9001-38ed6e458328"
              },
              {
                "type": "null"
              }
            ]
          },
          "register": {
            "oneOf": [
              {
                "description": "The uuid of the register that this log belongs to.",
                "type": "string",
                "format": "uuid",
                "example": "936835f7-2d75-41d2-9001-38ed6e458328"
              },
              {
                "type": "null"
              }
            ]
          },
          "register_number": {
            "oneOf": [
              {
                "description": "The register number (not uuid).",
                "type": "number"
              },
              {
                "type": "null"
              }
            ]
          },
          "issuer": {
            "oneOf": [
              {
                "description": "The uuid of the staff that this log belongs to.",
                "type": "string",
                "format": "uuid",
                "example": "936835f7-2d75-41d2-9001-38ed6e458328"
              },
              {
                "type": "null"
              }
            ]
          },
          "metadata": {
            "oneOf": [
              {
                "type": "object"
              },
              {
                "type": "null"
              }
            ]
          },
          "related_to": {
            "oneOf": [
              {
                "type": "object"
              },
              {
                "type": "null"
              }
            ]
          },
          "amount": {
            "oneOf": [
              {
                "type": "number"
              },
              {
                "type": "null"
              }
            ]
          },
          "unit": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          }
        }
      }
    },
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "loyalty_system": {
      "description": "The loyalty account that this card belongs to.",
      "type": "string",
      "format": "uuid",
      "example": "936835f7-2d75-41d2-9001-38ed6e458328"
    }
  }
}
