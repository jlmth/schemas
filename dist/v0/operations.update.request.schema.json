{
  "$id": "https://schemas.tillhub.com/v0/operations.update.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "required": [],
  "properties": {
    "name": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "maxLength": 128
        }
      ]
    },
    "summary": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "maxLength": 512
        }
      ]
    },
    "description": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "maxLength": 4096
        }
      ]
    },
    "client_id": {
      "description": "An identifier a caller might refer to in a client side application.",
      "oneOf": [
        {
          "type": "string",
          "maxLength": 128
        },
        {
          "type": "null"
        }
      ]
    },
    "type": {
      "type": "string",
      "enum": [
        "cronjob",
        "job"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "backoff",
        "received",
        "scheduled",
        "unscheduable",
        "active",
        "failed",
        "completed"
      ]
    },
    "status_detail": {
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "null"
        }
      ]
    },
    "schedule": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    },
    "executor": {
      "description": "Choose an executor that will run a job. Note: all \"internal\" prefixed executers will not be callable from user contexts.",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "enum": [
            "api:user:backup",
            "api:internal:backup"
          ]
        }
      ]
    },
    "executor_options": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object"
        }
      ]
    },
    "completion_notifications": {
      "description": "Notify when completed.",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "type",
                  "uri"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "webhook"
                    ]
                  },
                  "uri": {
                    "type": "string",
                    "format": "uri"
                  },
                  "options": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "verify_ssl": {
                            "type": "boolean",
                            "default": true
                          },
                          "enabled": {
                            "type": "boolean",
                            "default": true
                          }
                        }
                      }
                    ]
                  }
                }
              },
              {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "type",
                  "uri",
                  "address"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "email"
                    ]
                  },
                  "address": {
                    "type": "string",
                    "format": "email"
                  },
                  "options": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "enabled": {
                            "type": "boolean",
                            "default": true
                          }
                        }
                      }
                    ]
                  }
                }
              }
            ]
          }
        }
      ]
    },
    "execution_notifications": {
      "description": "Notify when started.",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "type",
                  "uri"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "webhook"
                    ]
                  },
                  "uri": {
                    "type": "string",
                    "format": "uri"
                  },
                  "options": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "verify_ssl": {
                            "type": "boolean",
                            "default": true
                          },
                          "enabled": {
                            "type": "boolean",
                            "default": true
                          }
                        }
                      }
                    ]
                  }
                }
              },
              {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "type",
                  "uri",
                  "address"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "email"
                    ]
                  },
                  "address": {
                    "type": "string",
                    "format": "email"
                  },
                  "options": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "enabled": {
                            "type": "boolean",
                            "default": true
                          }
                        }
                      }
                    ]
                  }
                }
              }
            ]
          }
        }
      ]
    },
    "failure_notifications": {
      "description": "Notify when failed.",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "type",
                  "uri"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "webhook"
                    ]
                  },
                  "uri": {
                    "type": "string",
                    "format": "uri"
                  },
                  "options": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "verify_ssl": {
                            "type": "boolean",
                            "default": true
                          },
                          "enabled": {
                            "type": "boolean",
                            "default": true
                          }
                        }
                      }
                    ]
                  }
                }
              },
              {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "type",
                  "uri",
                  "address"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "email"
                    ]
                  },
                  "address": {
                    "type": "string",
                    "format": "email"
                  },
                  "options": {
                    "oneOf": [
                      {
                        "type": "null"
                      },
                      {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "enabled": {
                            "type": "boolean",
                            "default": true
                          }
                        }
                      }
                    ]
                  }
                }
              }
            ]
          }
        }
      ]
    },
    "concurrency": {
      "description": "Define how many parallel jobs can be run from this operation.",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "integer",
          "maximum": 80,
          "minimum": 1
        }
      ]
    },
    "active_deadline_in_seconds": {
      "description": "Define how long this job can run until it times out.",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "integer",
          "maximum": 600,
          "minimum": 1
        }
      ]
    },
    "deadline_at": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "execute_at": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "suspend_until": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "date-time"
        }
      ]
    },
    "issuance_context": {
      "type": "object"
    },
    "metadata": {
      "type": "object"
    },
    "issuer": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "uuid"
        }
      ]
    },
    "assignee": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "format": "uuid"
        }
      ]
    },
    "messages": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          }
        }
      ]
    },
    "active": {
      "description": "Soft disable or enable this operation.",
      "type": "boolean",
      "default": true
    },
    "ignored": {
      "description": "Ignore this operation e.g. in UIs.",
      "type": "boolean",
      "default": false
    },
    "suspended": {
      "description": "Pause execution of operation.",
      "type": "boolean",
      "default": false
    },
    "deleted": {
      "description": "Soft delete this operation.",
      "type": "boolean",
      "default": false
    }
  }
}
