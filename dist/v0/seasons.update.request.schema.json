{
  "$id": "https://schemas.tillhub.com/v0/seasons.update.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "required": [],
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 64
    },
    "description": {
      "oneOf": [
        {
          "type": "string",
          "maxLength": 128
        },
        {
          "type": "null"
        }
      ]
    },
    "from": {
      "type": "string",
      "format": "date-time"
    },
    "to": {
      "type": "string",
      "format": "date-time"
    },
    "client_id": {
      "description": "An identifier used locally on POS for their own reference.",
      "oneOf": [
        {
          "type": "string",
          "maxLength": 128
        },
        {
          "type": "null"
        }
      ]
    },
    "active": {
      "description": "Soft disable or enable this season.",
      "type": "boolean",
      "default": true
    },
    "deleted": {
      "description": "Soft delete this season.",
      "type": "boolean",
      "default": false
    }
  }
}
