{
  "$id": "https://schemas.tillhub.com/v0/time_entries.create.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "type",
    "start"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "day",
        "break"
      ]
    },
    "description": {
      "type": "string",
      "maxLength": 32,
      "minLength": 0
    },
    "start": {
      "type": "string",
      "format": "date-time"
    },
    "end": {
      "type": "string",
      "format": "date-time"
    },
    "staff_id": {
      "type": "string",
      "maxLength": 128
    }
  }
}
