{
  "$id": "https://schemas.tillhub.com/v0/stock.update.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "qty"
  ],
  "properties": {
    "qty": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "number"
        }
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "available",
        "sold",
        "purchased",
        "reserved",
        "transit_outgoing",
        "transit_incoming",
        "delivered",
        "selected"
      ]
    },
    "metadata": {
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "null"
        }
      ]
    },
    "reasons": {
      "oneOf": [
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "null"
        }
      ]
    },
    "reason": {
      "oneOf": [
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "null"
        }
      ]
    }
  }
}
