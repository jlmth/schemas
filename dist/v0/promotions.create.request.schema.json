{
  "$id": "https://schemas.tillhub.com/v0/promotions.create.request.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "payload",
    "type"
  ],
  "properties": {
    "payload": {
      "description": "Javascript function text",
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        {
          "type": "null"
        }
      ]
    },
    "type": {
      "description": "The type of the promotion function",
      "type": "string",
      "enum": [
        "cart_map_function"
      ]
    },
    "client_id": {
      "description": "A identifier used locally on POS for their own reference.",
      "oneOf": [
        {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        {
          "type": "null"
        }
      ]
    },
    "deleted": {
      "type": "boolean"
    },
    "active": {
      "type": "boolean"
    }
  }
}
